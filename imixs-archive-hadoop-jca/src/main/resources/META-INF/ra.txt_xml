<?xml version="1.0" encoding="UTF-8"?>
<connector xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee
           http://java.sun.com/xml/ns/j2ee/connector_1_5.xsd"
	version="1.5">
	<display-name>Generic JCA</display-name>
	<vendor-name>adam-bien.com</vendor-name>
	<eis-type>Generic JCA</eis-type>
	<resourceadapter-version>1.0</resourceadapter-version>
	<resourceadapter>
		<outbound-resourceadapter>
			<connection-definition>
				<managedconnectionfactory-class>org.imixs.workflow.archive.hadoop.jca.spi.HadoopManagedConnectionFactory</managedconnectionfactory-class>
				<connectionfactory-interface>org.imixs.workflow.archive.hadoop.jca.DataSource</connectionfactory-interface>
				<connectionfactory-impl-class>org.imixs.workflow.archive.hadoop.jca.spi.HadoopDataSource</connectionfactory-impl-class>
				<connection-interface>org.imixs.workflow.archive.hadoop.jca.Connection</connection-interface>
				<connection-impl-class>org.imixs.workflow.archive.hadoop.jca.spi.HadoopConnection</connection-impl-class>
			</connection-definition>
			<transaction-support>LocalTransaction</transaction-support>
			 <authentication-mechanism> <authentication-mechanism-type>BasicPassword</authentication-mechanism-type> 
				<credential-interface>javax.resource.spi.security.PasswordCredential</credential-interface> 
				</authentication-mechanism> 
			<reauthentication-support>false</reauthentication-support>
		</outbound-resourceadapter>
	</resourceadapter>
</connector>